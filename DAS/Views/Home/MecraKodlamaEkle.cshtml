@model IEnumerable<DAS.Models.MECRA_KODLAMA>
@{
    if (Session["account"] == null)
    {
        Response.Redirect("~/Home");
    }
}
<title>Mecra Kodlama Ekle</title>
<h4>Mecra Kodlama Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <div class="card card-primary">
            <div class="card-header">
            </div>
            @using (Html.BeginForm())
            {
                <form role="form">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mecra:</label>
                            <input type="text" class="form-control" id="grup" name="mecra">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Mecra Kodu:</label>
                            <input type="text" class="form-control" id="grup" name="mecra_kodu">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            }
        </div>
    </div>
</div>